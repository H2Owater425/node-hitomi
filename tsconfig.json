{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"outDir": "./library/",
		"removeComments": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationDir": "./library/"
	},
	"exclude": ["./node_modules/"],
	"include": ["./source/**/*", "library/index.d.ts"]
}
